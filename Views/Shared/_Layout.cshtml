            <a href="/" class="d-flex align-items-center mb-4 mt-4 text-white text-decoration-none title-container">
                <svg class="bi pe-none me-2" width="40" height="32">
                    <use xlink:href="#logo" />
                </svg>
                <span class="fs-4 title-text">Finances</span>
            </a>

            <hr>

            <ul class="nav nav-pills flex-column mb-4">
                <h5><span class="badge text-bg mb-2">General</span></h5>

                <li class="nav-item">
                    <a class="nav-link mb-2" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">
                        <svg class="bi pe-none me-2" width="16" height="16">
                            <use xlink:href="#home" />
                        </svg>
                        Home
                    </a>
                </li>
                <li>
                    <a class="nav-link mb-2" asp-area="" asp-controller="Home" asp-action="Transactions">
                        <svg class="bi pe-none me-2" width="16" height="16">
                            <use xlink:href="#speedometer2" />
                        </svg>
                        Transactions
                    </a>
                </li>
                <li>
                    <a class="nav-link mb-2" asp-area="" asp-controller="Home" asp-action="CreateEditTransactions">
                        <svg class="bi pe-none me-2" width="16" height="16">
                            <use xlink:href="#table" />
                        </svg>
                        Create Transaction
                    </a>
                </li>
            </ul>
            <hr>
        </div>

        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
